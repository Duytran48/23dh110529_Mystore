@model _23dh110529_Mystore.Models.ViewModel.ProductDetailVM
@using PagedList.Mvc
<link href="~/Content/MyStyle/CustomerHome.css" rel="stylesheet" type="text/css" />

@*Hiển thị danh sách sản phẩm *@
@if (Model.TopProducts != null && Model.TopProducts.Any())
   {
        <section class="container-fluid listProduct" >
                    <h4 style="font-weight:bold">Sản phẩm bán chạy</h4>
                    <ul class="list-container">
                                @foreach (var product in Model.TopProducts)
                                    {
                                        <li class="lproduct-item">
                                            <div>
                                                      <a href="@Url.Action("ProductDetail","Home",new {id=product.ProductID} )">
                                                                <img src="@Html.DisplayFor(modelItem => product.ProductImage)"/>
                                                       </a>
                                            </div>
                                              <div>
                                                    <h5> @Html.DisplayFor(modelItem => product.ProductName)</h5>
                                                    <p class="prodSale">@Html.DisplayFor(modelItem => product.ProductPrice)</p>
                                               </div>
                                        </li>
                                   }
                    </ul>
         </section>

                            //Hiển thị phân trang
                    <div class="pagination-container">
                                @Html.PagedListPager(Model.TopProducts, page => Url.Action("Index", new
                                 {
                                                         id=Model.Product.ProductID,
                                                            quantity=Model.quantity,page
                                }))
                    </div>
    }
